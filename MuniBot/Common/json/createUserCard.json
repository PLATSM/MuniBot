{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "Crear Cuenta",
      "horizontalAlignment": "Center"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "cboTipoDocumento",
      "value": "0001",
      "choices": [
        {
          "$data": "{Survey.questions[0].items}",
          "title": "DNI",
          "value": "0001"
        },
        {
          "$data": "{Survey.questions[1].items}",
          "title": "RUC",
          "value": "0002"
        },
        {
          "$data": "{Survey.questions[2].items}",
          "title": "CEX",
          "value": "0003"
        }
      ]
    },
    {
      "type": "Input.Text",
      "placeholder": "Documento de Identidad",
      "style": "text",
      "maxLength": 0,
      "id": "txtDocumentoIdentidad"
    },
    {
      "type": "Input.Text",
      "placeholder": "Nombres",
      "style": "text",
      "maxLength": 50,
      "id": "txtNombres",
      "required ": " true ",
      "requiredError ": " Se requiere un nombres de usuario."
    },
    {
      "type": "Input.Text",
      "placeholder": "Apellido Paterno",
      "style": "text",
      "maxLength": 50,
      "id": "txtApellidoPaterno"
    },
    {
      "type": "Input.Text",
      "placeholder": "Apellido Materno",
      "style": "text",
      "maxLength": 50,
      "id": "txtApellidoMaterno"
    },
    {
      "type": "Input.Text",
      "placeholder": "Correo Electronico",
      "style": "Email",
      "maxLength": 255,
      "id": "txtCorreoElectronico"
    },
    {
      "type": "Input.Text",
      "placeholder": "Contrasena",
      "style": "text",
      "maxLength": 20,
      "id": "txtContrasena"
    },
    {
      "type": "Input.Text",
      "placeholder": "Verficar contrasena",
      "style": "text",
      "maxLength": 20,
      "id": "txtVerificarContrasena"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Ok",
      "data": {
        "id": "createUserCard"
      }
    }
  ]
} 