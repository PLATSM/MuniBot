{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "TextBlock",
      "weight": "Bolder",
      "text": "Iniciar Sesion",
      "horizontalAlignment": "Center",
      "size": "Medium"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "cboTipoDocumento",
      "value": "0001",
      "choices": [
        {
          "$data": "{Survey.questions[0].items}",
          "title": "DNI",
          "value": "0001"
        },
        {
          "$data": "{Survey.questions[1].items}",
          "title": "RUC",
          "value": "0002"
        },
        {
          "$data": "{Survey.questions[2].items}",
          "title": "CEX",
          "value": "0003"
        }
      ]
    },
    {
      "type": "Input.Text",
      "id": "txtNumeroDocumento",
      "placeholder": "Numero Documento de Identidad",
      "maxLength": 20
    },
    {
      "type": "Input.Text",
      "id": "txtContrasena",
      "style": "password",
      "placeholder": "Contrasena",
      "maxLength": 20
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Enviar",
      "data": {
        "id": "loginCard"
      }
    }
  ]
}